<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Email template for reset password -->
        <record id="invoice_mail_template" model="mail.template">
            <field name="name">Invoice notification</field>
            <field name="model_id" ref="codilar.model_sale_order"/>
            <field name="subject">Invoice notification mail</field>
            <field name="email_from">${user.email}</field>
            <field name="email_to">${user.email}</field>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0"
                       style="padding-top: 16px; background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;">
                    <tr>
                        <h1>hii</h1>
                    </tr>
                </table>
            </field>
            <field name="lang">${object.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
